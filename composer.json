{
    "name": "phpinnacle/elastics",
    "type": "library",
    "description": "PHPinnacle ElasticSearch Query Builder",
    "keywords": [
        "phpinnacle", "query builder", "query dsl", "elasticsearch"
    ],
    "homepage": "https://github.com/phpinnacle/elastics",
    "license": "MIT",
    "authors": [
        {
            "name": "PHPinnacle",
            "email": "dev@phpinnacle.com",
            "homepage": "https://phpinnacle.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "PHPinnacle\\Elastics\\": "src"
        },
        "files": [
            "src/functions.php",
            "src/constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PHPinnacle\\Elastics\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
